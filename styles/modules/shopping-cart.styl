#shopping-cart
    background: $gray-lighter
    min-height: 300px
    padding: 30px
    border-radius: 4px

    .cart_entry
        background: #fafafa
        margin-bottom: 10px
        padding: 15px

    .product_name
        display: inline-block
        width: 230px

    .price
        display: inline-block
        float: right
    
    .clear-cart
        width: 100%
        margin-bottom: 10px
